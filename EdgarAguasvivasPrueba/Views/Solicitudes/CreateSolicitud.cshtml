@model Solicitud

@{
    Layout = "_Layout";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="m-1 p-1" method="post">
    <div class="form-group">
        <label asp-for="Persona"></label>
        <select asp-for="Persona">
        </select>
        <span asp-validation-for="Persona" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado">          
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion"></label>
        <input asp-for="FechaCreacion" type="date" class="form-control" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>  